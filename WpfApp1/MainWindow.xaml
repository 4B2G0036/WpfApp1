<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="計算質數" Height="450" Width="800">
    <Grid Background="#FF2E16DA">
        <Label Content="請輸入一個數值:" HorizontalAlignment="Left" Margin="79,50,0,0" VerticalAlignment="Top" Width="425" Height="32" Background="#FF21C88F"/>
        <TextBox x:Name="MyTextBox" HorizontalAlignment="Left" Margin="183,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="21"/>
        <Button x:Name="MyButton" Content="計算質數" HorizontalAlignment="Left" Margin="410,53,0,0" VerticalAlignment="Top" Height="27" Width="68" RenderTransformOrigin="0.446,0.423" Click="MyButton_Click"/>
        <TextBlock x:Name="MyTextBlock" HorizontalAlignment="Left" Margin="79,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="224" Width="425" Background="#FF62D1E0" RenderTransformOrigin="0.5,0.5" FontFamily="Consolas" FontSize="20">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.002"/>
                    <RotateTransform Angle="-0.113"/>
                    <TranslateTransform Y="-0.006"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

    </Grid>
</Window>
